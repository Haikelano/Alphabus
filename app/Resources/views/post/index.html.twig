{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Images</th>
                <th>Remarques</th>
                <th>Date</th>
                <th>Proprietaire</th>
                <th>titre</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
